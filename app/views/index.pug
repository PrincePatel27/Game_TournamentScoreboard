extend header 
block content       
  .container-fluid.bg-light 
    .row.mt-2 
        .col-md-12 
         ul.nav.nav-tabs
            li.nav-item
              a.nav-link.active(href='#Tournament') Tournament
            li.nav-item
              a.nav-link(href='#Matches') Matches
            li.nav-item
              a.nav-link(href='#Pointtable') Point Table             
    .tab-content
      #Tournament.container.tab-pane.fade.show.active.mt-2.bg-light
          table.table.table-striped
            thead
              tr
                th(scope='col') #
                th(scope='col') Name
                th(scope='col') Game
                th(scope='col') Date
                th(scope='col') Time 
                th(scope='col') Mode  
                th(scope='col') Venue   
            tbody
              for tournament in tournaments  
                tr
                  th(scope='row') #{tournament.id}
                  td #{tournament.name}
                  td #{tournament.gameName}
                  td #{tournament.date}
                  td #{tournament.time}
                  td #{tournament.status}
                  td #{tournament.venue}
      #Matches.container.tab-pane.fade.mt-2.bg-light
        dropdown
          button#dropdownMenuButton.btn.btn-secondary.dropdown-toggle(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
           | Dropdown button
          .dropdown-menu(aria-labelledby='dropdownMenuButton')
            for tr in tournamentLeaderboard
              a.dropdown-item(href='#tournamentLeaderboard.name') #{tr.name}
        
        for tr in tournamentLeaderboard
          .row.p-2 
            if tr.leaderBoard.length > 0
              table.table.table-striped
                thead
                  tr
                    th(scope='col') #
                    th(scope='col') Team Name
                    th(scope='col') Points
                tbody
                  for ld in tr.leaderBoard
                    tr
                      th(scope='row') #{ld.id}
                      td #{ld.teamName}
                      td #{ld.point}
            else
              table.table.table-striped 
                tbody 
                  tr
                    th  No tournament found 

      #Pointtable.container.tab-pane.fade.mt-2.bg-light
        for tr in tournamentLeaderboard
          .row.p-2
            h3.text-white.bg-dark #{tr.name}
            if tr.leaderBoard.length > 0
              table.table.table-striped
                thead
                  tr
                    th(scope='col') #
                    th(scope='col') Team Name
                    th(scope='col') Points
                tbody
                  for ld in tr.leaderBoard
                    tr
                      th(scope='row') #{ld.id}
                      td #{ld.teamName}
                      td #{ld.point}
            else
              table.table.table-striped 
                tbody 
                  tr
                    th  No tournament found         
  script.
    $(document).ready(function(){
    $(".nav-tabs a").click(function(){
    $(this).tab('show');
      });
    });     
  